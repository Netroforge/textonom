{
  "name": "textonom",
  "private": true,
  "version": "1.0.0",
  "description": "A text editor that performs popular routine transformations of text on your local machine",
  "author": "Netroforge",
  "main": "main.js",
  "scripts": {
    "lint": "eslint .",
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "vite build && electron .",
    "electron:build": "vite build && electron-builder",
    "electron:make": "npx vite build && electron-forge make",
    "electron:make:win": "electron-forge make --platform win32",
    "electron:make:mac": "electron-forge make --platform darwin",
    "electron:make:linux": "electron-forge make --platform linux",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "preview": "vite preview"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "ace-builds": "^1.39.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "js-yaml": "^4.1.0",
    "monaco-editor": "^0.52.2",
    "react": "^19.1.0",
    "react-ace": "^14.0.1",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.5.0",
    "styled-components": "^6.1.17",
    "wait-on": "^8.0.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-rpm": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^35.1.5",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "fs-extra": "^11.3.0",
    "globals": "^15.15.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.15.0"
  },
  "build": {
    "appId": "com.netroforge.textonom",
    "productName": "Textonom",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "msi"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    }
  }
}
